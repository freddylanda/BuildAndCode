package com.mx.Celular;

import com.mx.Pelicula.ImplementacionMovie;
import com.mx.Pelicula.Movie;

public class Principal {

	public static void main(String[] args) {
		
		//CELULARES
		//Instanciar el objeto
		Celular celular1 = new Celular("Samsung", "Galaxy", 8,  "125 gb" ,8592.60, "Rojo");
		Celular celular2 = new Celular("Huawei", "Mate9", 8,  "125 gb" ,98521.60, "Negro");
		Celular celular3 = new Celular("Nokia", "N003", 32, "512 GB", 19800.56, "Blanco");
		Celular celular4 = new Celular("Sony", "SO98", 16, "512 GB", 20000.45, "Azul");
		Celular celular5 = new Celular("Huawei", "p50 pro",9, "150 gb",10000,"blanco");
		Celular celular6 = new Celular("Oppo", "reno 10",10, "130 gb",125000.89,"azul");
		
		//Objeto auxiliar
		Celular celular = null;
		
		//Mandar llamar a la clase Implementación para porder ocupar sus métodos
		Implementacion imp = new Implementacion();
		
		//agregar datos a la lista
		imp.guardar(celular1);
		imp.guardar(celular2);
		imp.guardar(celular3);
		imp.guardar(celular4);
		imp.guardar(celular5);
		imp.guardar(celular6);

		//Mostrar
		imp.mostrar();
		
		//Buscar
		celular = imp.buscar(0);
		System.out.println("Elemento encontrado: "+ celular);
		
		//Editar
		celular = imp.buscar(1);
		celular.setModelo("P30 Plus");
		celular.setPrecio(443.00);
		
		//Eliminar
		imp.eliminar(2);
		
		//Mostrar
		imp.mostrar();
		
		//Contar
		imp.contar();
		
		//PELICULAS
		
		//Instanciar Objeto
		Movie pelicula1 = new Movie("Shawshank Redemption", 1994, "Frank Darabont", 9.3);
		Movie pelicula2 = new Movie("Dark Knight", 2008, "Christopher Nolan", 9.0);	
		Movie pelicula3 = new Movie("Angry Men", 1957, "Sidney Lumet", 9.0);
		Movie pelicula4 = new Movie("Return of the King", 2003, "Peter Jackson", 8.9);
		
		//Objeto auxiliar
		Movie movie = null;
		
		//Mandar llamar a la clase Implementación para porder ocupar sus métodos
		ImplementacionMovie impMov = new ImplementacionMovie();
		
		impMov.guardar(pelicula1);
		impMov.guardar(pelicula2);
		impMov.guardar(pelicula3);
		impMov.guardar(pelicula4);

		//Mostrar
		impMov.mostrar();
		
		//Buscar
		movie = impMov.buscar(0);
		System.out.println("Elemento encontrado: "+ movie);
		
		//Editar
		movie = impMov.buscar(1);
		movie.setTitulo("Inception");
		movie.setAnio(2010);
		movie.setDirector("Christopher Nolan");
		movie.setClasificacion(8.8);
				
		//Eliminar
		impMov.eliminar(3);
				
		//Mostrar
		impMov.mostrar();
				
		//Contar
		impMov.contar();
	}

}
